<div class="container">
  <div class="row align-items-center">
    <div class="col-sm-1"></div>
    <div class="col login-box">
      <%= form_tag '/login' do %>
        <h1 class="logo">TeMSYS</h1>
        <div class="form-group">
          <%= label_tag :username%>
          <%= text_field_tag :username, "", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= label_tag :password%>
          <%= password_field_tag :password, "", class: "form-control" %>
        </div>
        <%= submit_tag "Login", class: "btn btn-temsys btn-block"%>
      <%end%>
    </div>
  <div class="col-sm-1"></div>
  </div>
</div>
